@page
@model PersonalDataModel

@{
    // Angir tittel og aktiv side for visningen
    ViewData["Title"] = "Slett konto";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h3>@ViewData["Title"]</h3>

<div class="row">
    <div class="col-md-6">
        <!-- Informasjon om personlige data og konsekvensene av å slette kontoen -->
        <p>Din konto inneholder personlige data som du har gitt oss. Denne siden lar deg slette disse dataene.</p>
        <p>
            <strong>Å slette disse dataene vil permanent fjerne kontoen din, og dette kan ikke gjenopprettes.</strong>
        </p>

        <!-- Knapp for å starte prosessen med å slette personlige data -->
        <p>
            <a id="delete" asp-page="DeletePersonalData" class="btn btn-danger">Slett konto</a>
        </p>
    </div>
</div>

@section Scripts {
    <!-- Inkluderer partiell visning for valideringsskript -->
    <partial name="_ValidationScriptsPartial" />
}