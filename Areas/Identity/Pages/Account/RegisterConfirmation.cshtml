@page
@model RegisterConfirmationModel
@{
    // Setter tittelen for visningen
    ViewData["Title"] = "Register confirmation";
}

<!-- Overskrift på siden -->
<h1>@ViewData["Title"]</h1>

<!-- Sjekker om det skal vises en lenke for bekreftelse av konto -->
@if (@Model.DisplayConfirmAccountLink)
{
    <!-- Melding som vises når det ikke er konfigurert en ekte e-postsender -->
    <p>
        This app does not currently have a real email sender registered, see 
        <a href="https://aka.ms/aspaccountconf">these docs</a> for how to configure a real email sender.
        Normally this would be emailed: <a id="confirm-link" href="@Model.EmailConfirmationUrl">Click here to confirm your account</a>
    </p>
}
else
{
    <!-- Melding som vises når det er konfigurert en e-postsender -->
    <p>
        Please check your email to confirm your account.
    </p>
}