@page
@model LoginModel

@{
    // Setter tittelen for siden
    ViewData["Title"] = "Logg inn";
}

<!-- Overskrift for innloggingssiden -->
<h1 class="text-center">@ViewData["Title"]</h1>

<!-- Opprett en innloggingsseksjon -->
<div class="row">
    <!-- Sentrert kolonne med innloggingsform -->
    <div class="col-md-4 offset-md-4 mt-5 text-center">
        <section>
            <!-- Innloggingsform -->
            <form id="account" method="post">
                <h2>Bruk en lokal konto for å logge inn.</h2>
                <hr />
                
                <!-- Vis feilmeldinger hvis de oppstår -->
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                
                <!-- E-postinntastingsfelt -->
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label">E-post</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                
                <!-- Passordinntastingsfelt -->
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="form-label">Passord  </label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                
                <!-- Husk meg-innslag -->
                <div class="checkbox mb-3">
                    <label asp-for="Input.RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                         Husk meg
                    </label>
                </div>
                
                <!-- Logg inn-knapp -->
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Logg inn</button>
                </div>
                <br />
                
                <!-- Andre lenker som Glemt passord, Registrer ny bruker, Send e-postbekreftelse -->
                <div>
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Glemt passordet ditt?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registrer som ny bruker</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Send e-postbekreftelse på nytt</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
    
    <!-- Ekstra kolonne (for fremtidig utvidelse) -->
    <div class="col-md-6 col-md-offset-2">
        <!-- Ekstra seksjon (kan inkludere annen innlogging som Google, Facebook, etc.) -->
    </div>
</div>

<!-- Inkludert skriptseksjon (valideringsskript) -->
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

}
