@model ReficioSolution.Models.ServiceFormViewModel

@{
    // Setter modellen for visningen og sidetittelen
    ViewData["Title"] = "ServiceOrderConnector";
}

<!-- HTML-head-elementet med nødvendige metadata -->
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Sidetittel -->
    <title>ServiceOrderConnector</title>
    <!-- Lenke til ekstern stil for utforming -->
    <link rel="stylesheet" href="css/ServiceOrderConnector.css">
</head>

<!-- HTML-body-elementet for innholdet på siden -->
<body>
    <!-- Container for hovedinnholdet med toppmargin -->
    <div class="container mt-4">
        <!-- Overskrift for servicordredetaljsiden med kundens navn -->
        <h2>Service Form Details for @Model.Customer</h2>
        <!-- Horisontal linje som en visuell separator -->
        <hr class="divider">
            
        <!-- Oppsett av en todelt rad med detaljer i venstre kolonne -->
        <div class="row">
            <div class="col-md-6">
                <!-- Definisjonsliste (dl) for å vise detaljer om servicen -->
                <dl class="row">
                    <!-- Hver detalj vises som et par av overskrift (dt) og verdi (dd) -->
                    <dt class="col-sm-4">Ordre Nummer:</dt>
                    <dd class="col-sm-8">@Model.OrderNumber</dd>
                        
                    <dt class="col-sm-4">Customer:</dt>
                    <dd class="col-sm-8">@Model.Customer</dd>
                        
                    <dt class="col-sm-4">Email:</dt>
                    <dd class="col-sm-8">@Model.Email</dd>
                        
                    <dt class="col-sm-4">Telefonnummer:</dt>
                    <dd class="col-sm-8">@Model.Phone</dd>
                
                    <dt class="col-sm-4">Address:</dt>
                    <dd class="col-sm-8">@Model.Address</dd>
                        
                    <dt class="col-sm-4">Received Date:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => Model.DateReceived)</dd>
                </dl>
            </div>
            <!-- Hvis du har flere detaljer, kan du legge til flere kolonner eller lage et enkeltkolonnelayout -->
        </div>
    </div>

    <!-- Navigasjonslenker for å se detaljer om serviceskjema og sjekkliste -->
    <div>
        <!-- Fleksibel boks med full bredde for å plassere knapper ved siden av hverandre -->
        <div class="flex-box full-width">
            <!-- Lenke til detaljsiden for serviceskjema med servicens ID som parameter -->
            <a class="btn btn-primary" asp-area="" asp-controller="FilledOutServiceForm" asp-action="Index" asp-route-id="@Model.ServiceFormId">Se Serviceskjema</a>
            <!-- Lenke til detaljsiden for sjekkliste med sjekklistens ID som parameter -->
            <a class="btn btn-primary" asp-area="" asp-controller="FilledOutCheckList" asp-action="Index" asp-route-id="@Model.">Se Sjekkliste</a>
        </div>
    </div>
</body>
