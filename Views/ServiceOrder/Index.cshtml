@model IEnumerable<ReficioSolution.Models.ServiceFormViewModel>

@{
    ViewData["Title"] = "ServiceOrder";
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ServiceOrdre</title>
    <link rel="stylesheet" href="/css/ServiceOrder.css">
    <!--<link rel="stylesheet" href="css/TableCellSize.css">-->
    
</head>

<body>
<h2>Serviceordre</h2>
    <form>
        <table class="table table-hover">
            <thead class="thead-light">
            <tr>
                <th>Serviceskjema ID</th>
                <th>Kunde:</th>
                <th>Mottatt dato:</th>
                <th>Ordrenummer:</th>
                <th>Status:</th>
            </tr>
            </thead>
            <tbody>
            
            @foreach (var serviceFormEntry in Model)
            {
                <tr>
                    <td>
                        <a class="nav-link text-dark" asp-area="" asp-controller="ServiceOrderConnector" asp-action="Index" asp-route-id="@serviceFormEntry.ServiceFormId">
                            @serviceFormEntry.ServiceFormId
                        </a>
                    </td>
                    <td>
                        <a class="nav-link text-dark" asp-area="" asp-controller="ServiceOrderConnector" asp-action="Index" asp-route-id="@serviceFormEntry.ServiceFormId">
                            @serviceFormEntry.Customer
                        </a>
                    </td>
                    <td>
                        <a class="nav-link text-dark" asp-area="" asp-controller="ServiceOrderConnector" asp-action="Index" asp-route-id="@serviceFormEntry.ServiceFormId">
                            @Html.DisplayFor(model => serviceFormEntry.DateReceived)
                        </a>
                    </td>
                    <td>
                        <a class="nav-link text-dark" asp-area="" asp-controller="ServiceOrderConnector" asp-action="Index" asp-route-id="@serviceFormEntry.ServiceFormId">
                            @serviceFormEntry.OrderNumber
                        </a>
                    </td>
                    <td>
                    <td>
                        <form method="post" action="@Url.Action("UpdateStatus", "ServiceOrder")">
                            <input type="hidden" name="serviceFormId" value="@serviceFormEntry.ServiceFormId" />
                            <select name="status" onchange="this.form.submit()">
                                <option value="">Velg Status</option>
                                <option value="OK">Ikke begynt</option>
                                <option value="Under framgang">Framgang</option>
                                <option value="Not ok">Ferdig</option>
                            </select>
                        </form>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </form>
</body>