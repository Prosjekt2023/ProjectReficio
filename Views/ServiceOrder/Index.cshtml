@model IEnumerable<ReficioSolution.Models.ServiceFormViewModel>

@{
    // Setter sidetittelen
    ViewData["Title"] = "ServiceOrder";
}

<!-- HTML-head-elementet med nødvendige metadata -->
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Sidetittel -->
    <title>ServiceOrdre</title>
    <!-- Lenke til ekstern stil for utforming -->
    <link rel="stylesheet" href="/css/ServiceOrder.css">
    <!-- Eventuelle andre lenker til stilark -->
    <!--<link rel="stylesheet" href="css/TableCellSize.css">-->
</head>

<!-- HTML-body-elementet for innholdet på siden -->
<body>
    <!-- Overskrift for servicordresiden -->
    <h2>Serviceordre</h2>

    <!-- Skjema for å vise serviceinformasjon i en tabell -->
    <form>
        <!-- Tabell med overskriftsrader -->
        <table class="table table-hover">
            <thead class="thead-light">

                <!-- Overskriftsrader for tabellen -->
                <tr>
                    <th>Serviceskjema Id</th>
                    <th>Kunde:</th>
                    <th>Mottatt dato:</th>
                    <th>Ordrenummer:</th>
                </tr>
            </thead>
            <tbody>
                <!-- Itererer gjennom hvert serviceformoppføring i modellen -->
                @foreach (var serviceFormEntry in Model)
                {
                    <!-- Tabellrad med lenker til detaljsiden for hver serviceformoppføring -->
                    <tr>
                        <!-- Kolonne med lenke til detaljsiden for servicen -->
                        <td>
                            <a class="nav-link text-dark" asp-area="" asp-controller="ServiceOrderConnector" asp-action="Index" asp-route-id="@serviceFormEntry.ServiceFormId">
                                @serviceFormEntry.ServiceFormId
                            </a>
                        </td>
                        <!-- ... (tilsvarende struktur for andre kolonner) ... -->
                    </tr>
                }
            <tr>
                <th>Serviceskjema ID</th>
                <th>Kunde:</th>
                <th>Mottatt dato:</th>  
                <th>Ordrenummer:</th>
                <th>Status:</th>
            </tr>
            <tbody>
            
            @foreach (var serviceFormEntry in Model)
            {
                <tr>
                    <td>
                        <a class="nav-link text-dark" asp-area="" asp-controller="ServiceOrderConnector" asp-action="Index" asp-route-id="@serviceFormEntry.ServiceFormId">
                            @serviceFormEntry.ServiceFormId
                        </a>
                    </td>
                    <td>
                        <a class="nav-link text-dark" asp-area="" asp-controller="ServiceOrderConnector" asp-action="Index" asp-route-id="@serviceFormEntry.ServiceFormId">
                            @serviceFormEntry.Customer
                        </a>
                    </td>
                    <td>
                        <a class="nav-link text-dark" asp-area="" asp-controller="ServiceOrderConnector" asp-action="Index" asp-route-id="@serviceFormEntry.ServiceFormId">
                            @Html.DisplayFor(model => serviceFormEntry.DateReceived)
                        </a>
                    </td>
                    <td>
                        <a class="nav-link text-dark" asp-area="" asp-controller="ServiceOrderConnector" asp-action="Index" asp-route-id="@serviceFormEntry.ServiceFormId">
                            @serviceFormEntry.OrderNumber
                        </a>
                    </td>
                    <td>
                        <td>
                            <select name="status" id="status">
                                <option value="Ikke valgt">Ikke valgt</option>
                                <option value="OK">Ok</option>
                                <option value="Under framgang">Under framgang</option>
                                <option value="Not ok">Not ok</option>
                            </select>
                        </td>
                </tr>
            }
            
            </tbody>
        </table>
    </form>
</body>
