@model ReficioSolution.Models.ServiceFormViewModel

@{
    // Setter sidetittelen
    ViewData["Title"] = "ServiceSkjema";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Setter tegnsettet og visningsområdet for siden -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Setter sidetittelen -->
    <title>Serviceskjema</title>
    <!-- Lenke til ekstern stilark for utforming -->
    <link rel="stylesheet" href="/css/ServiceForm.css">
</head>

<body>

<div class="form-container">
    <!-- Overskrift for serviceskjemaet -->
    <h2>Serviceskjema</h2>
    <hr class="divider">    

    <!-- Skjema for å sende inn serviceinformasjon -->
    <form asp-controller="ServiceForm" asp-action="Index" method="post">
        <!-- Anti-forgery-token for sikkerhet -->
        @Html.AntiForgeryToken()

        <!-- Inndatafelt i skjemaet gruppert etter rad og kolonne -->
        <div class="form-row">
            <div class="form-col">
                <div class="form-group">
                    <!-- Inndatafelt for kundenavn -->
                    <label asp-for="Customer" class="control-label">Kunde:</label>
                    <input asp-for="Customer" class="form-control"/>
                    <span asp-validation-for="Customer" class="text-danger"></span>
                </div>
            </div>

            <div class="form-col">
                <div class="form-group">
                    <!-- Inndatafelt for mottatt dato -->
                    <label asp-for="DateReceived" class="control-label">Mottatt dato:</label>
                    <input asp-for="DateReceived" class="form-control" type="date"/>
                    <span asp-validation-for="DateReceived" class="text-danger"></span>
                </div>
            </div>
        </div>

        <!-- Ytterligere formgrupper for annen informasjon -->
        <!-- ... (tilsvarende struktur for andre inndatafelt) ... -->

        <!-- Send inn-knapp nederst i skjemaet -->
        <div class="form-group">
            <div class="form-row center-row">
                <input type="submit" value="Send inn skjema" class="btn btn-primary custom-button"/>
            </div>
        </div>

    </form>
</div>

</body>
</html>
