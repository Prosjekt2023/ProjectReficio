        <label for="ChainWheelKeyCheck_Bør_skiftes"></label>
    </td>
    <td>
        <input type="radio" id="ChainWheelKeyCheck_Defekt" name="ChainWheelKeyCheck" value="Defekt"
               @(Model.ChainWheelKeyCheck == "Defekt" ? "checked='checked'" : "") />
        <label for="ChainWheelKeyCheck_Defekt"></label>
        <input type="hidden" name="ChainWheelKeyCheck" value="@Model.ChainWheelKeyCheck" />
    </td>
        </tr>
        
        <tr>
            <td rowspan="7">Hydraulisk</td>
            <td>Sjekk hydraulikk sylinder for lekkasje</td>
             <td>
                   <input type="radio" id="HydraulicCylinderCheck_OK" name="HydraulicCylinderCheck" value="OK" 
                          @(Model.HydraulicCylinderCheck == "OK" ? "checked='checked'" : "") />
                   <label for="HydraulicCylinderCheck_OK"></label>
               </td>
               <td>
                   <input type="radio" id="HydraulicCylinderCheck_Bør_skiftes" name="HydraulicCylinderCheck" value="Bør_skiftes" 
                          @(Model.HydraulicCylinderCheck == "Bør_skiftes" ? "checked='checked'" : "") />
                   <label for="HydraulicCylinderCheck_Bør_skiftes"></label>
               </td>
               <td>
                   <input type="radio" id="HydraulicCylinderCheck_Defekt" name="HydraulicCylinderCheck" value="Defekt"
                          @(Model.HydraulicCylinderCheck == "Defekt" ? "checked='checked'" : "") />
                   <label for="HydraulicCylinderCheck_Defekt"></label>
                   <input type="hidden" name="HydraulicCylinderCheck" value="@Model.HydraulicCylinderCheck" />
               </td>
        </tr>
        <tr>
            <td>Sjekk slanger for skader og lekkasje</td>
            <td>
                    <input type="radio" id="HoseCheck_OK" name="HoseCheck" value="OK" 
                           @(Model.HoseCheck == "OK" ? "checked='checked'" : "") />
                    <label for="HoseCheck_OK"></label>
                </td>
                <td>
                    <input type="radio" id="HoseCheck_Bør_skiftes" name="HoseCheck" value="Bør_skiftes" 
                           @(Model.HoseCheck == "Bør_skiftes" ? "checked='checked'" : "") />
                    <label for="HoseCheck_Bør_skiftes"></label>
                </td>
                <td>
                    <input type="radio" id="HoseCheck_Defekt" name="HoseCheck" value="Defekt"
                           @(Model.HoseCheck == "Defekt" ? "checked='checked'" : "") />
                    <label for="HoseCheck_Defekt"></label>
                    <input type="hidden" name="HoseCheck" value="@Model.HoseCheck" />
                </td>
        </tr>
        <tr>
            <td>Test hydraulikkblokk i testbenk</td>
            <td>
                <input type="radio" id="OK" name="HydraulicBlockTest" value="OK" />
                <label for="OK"></label>
            </td>
            
            <td>
                <input type="radio" id="Bør_skiftes" name="HydraulicBlockTest" value="Bør_skiftes" />
                <label for="Bør_skiftes"></label>
            </td>
            
            <td>
                <input type="radio" id="Defekt" name="HydraulicBlockTest" value="Defekt"/>
                <label for="Defekt"></label>  
            </td>
            
        </tr>
        <tr>
            <td>Skift olje i tank</td>
            <td>
                <input type="radio" id="OK" name="TankOilChange" value="OK" />
                <label for="OK"></label>
            </td>
            
            <td>
                <input type="radio" id="Bør_skiftes" name="TankOilChange" value="Bør_skiftes" />
                <label for="Bør_skiftes"></label>
            </td>
            
            <td>
                <input type="radio" id="Defekt" name="TankOilChange" value="Defekt"/>
                <label for="Defekt"></label>       
            </td>
            
        </tr>
        <tr>
            <td>Skift olje på gir boks</td>
            <td>
                <input type="radio" id="OK" name="GearboxOilChange" value="OK" />
                <label for="OK"></label>
            </td>
            
            <td>
                <input type="radio" id="Bør_skiftes" name="GearboxOilChange" value="Bør_skiftes" />
                <label for="Bør_skiftes"></label>
            </td>
            
            <td>
                <input type="radio" id="Defekt" name="GearboxOilChange" value="Defekt"/>
                <label for="Defekt"></label>     
            </td>
            
        </tr>
        <tr>
            <td>Sjekk Ringsylinder åpne og skift tetninger</td>
            <td>
                <input type="radio" id="OK" name="RingCylinderSealsCheck" value="OK" />
                <label for="OK"></label>
            </td>
            
            <td>
                <input type="radio" id="Bør_skiftes" name="RingCylinderSealsCheck" value="Bør_skiftes" />
                <label for="Bør_skiftes"></label>
            </td>
            
            <td>
                <input type="radio" id="Defekt" name="RingCylinderSealsCheck" value="Defekt"/>
                <label for="Defekt"></label>        
                 <input type="hidden" asp-for="RingCylinderSealsCheck" />
            </td>
            
        </tr>
        <tr>
            <td>Sjekk bremse sylinder åpne og skift tetninger</td>
            <td>
                <input type="radio" id="OK" name="BrakeCylinderSealsCheck" value="OK" />
                <label for="OK"></label>
            </td>
            
            <td>
                <input type="radio" id="Bør_skiftes" name="BrakeCylinderSealsCheck" value="Bør_skiftes" />
                <label for="Bør_skiftes"></label>
            </td>
            
            <td>
                <input type="radio" id="Defekt" name="BrakeCylinderSealsCheck" value="Defekt"/>
                <label for="Defekt"></label>    
                 <input type="hidden" asp-for="BrakeCylinderSealsCheck" />
            </td>
            
        </tr>
        <tr>
            <td rowspan="3">Elektro</td>
            <td>Sjekk ledningsnett på vinsj</td>
            <td>
                <input type="radio" id="OK" name="WinchWiringCheck" value="OK" />
                <label for="OK"></label>
            </td>
            
            <td>
                <input type="radio" id="Bør_skiftes" name="WinchWiringCheck" value="Bør_skiftes" />
                <label for="Bør_skiftes"></label>
            </td>
            
            <td>
                <input type="radio" id="Defekt" name="WinchWiringCheck" value="Defekt"/>
                <label for="Defekt"></label>        
                <input type="hidden" asp-for="WinchWiringCheck" />
            </td>
            
        </tr>
        <tr>
            <td>Sjekk og test radio</td>
            <td>
                <input type="radio" id="OK" name="RadioCheck" value="OK" />
                <label for="OK"></label>
            </td>
            
            <td>
                <input type="radio" id="Bør_skiftes" name="RadioCheck" value="Bør_skiftes" />
                <label for="Bør_skiftes"></label>
            </td>
            
            <td>
                <input type="radio" id="Defekt" name="RadioCheck" value="Defekt"/>
                <label for="Defekt"></label>        
                 <input type="hidden" asp-for="RadioCheck" />
            </td>
            
        </tr>
        <tr>
            <td>Sjekk og test knappekasse</td>
            <td>
                <input type="radio" id="OK" name="ButtonBoxCheck" value="OK" />
                <label for="OK"></label>
            </td>
            
            <td>
                <input type="radio" id="Bør_skiftes" name="ButtonBoxCheck" value="Bør_skiftes" />
                <label for="Bør_skiftes"></label>
            </td>
            
            <td>
                <input type="radio" id="Defekt" name="ButtonBoxCheck" value="Defekt"/>
                <label for="Defekt"></label>     
                   <input type="hidden" asp-for="ButtonBoxCheck" />
            </td>
            
        </tr>
        <tr>
            <td rowspan="1">Trykk settinger</td>
            <td>xx- Bar</td> <!-- Spør nøsted om, og endre -->
            <td>
                <input type="radio" id="OK" name="PressureSettings" value="OK" /> 
                <label for="OK"></label>
            </td>
            
            <td>
                <input type="radio" id="Bør_skiftes" name="PressureSettings" value="Bør_skiftes" />
                <label for="Bør_skiftes"></label>
            </td>
            
            <td>
                <input type="radio" id="Defekt" name="PressureSettings" value="Defekt"/>
                <label for="Defekt"></label>   
                   <input type="hidden" asp-for="PressureSettings" />
            </td>
        </tr>
        <tr>
            <td rowspan="3">Funksjonstest</td>
            <td>Test vinsj og kjør alle funksjoner</td>
            <td>
                <input type="radio" id="OK" name="FunctionTest" value="@Model.FunctionTest" readonly="readonly"/>
                <label for="OK"></label>
                 <span validation-for="OK" class="FunctionTest"></span>
            </td>
            
            <td>
                <input type="radio" id="Bør_skiftes" name="FunctionTest" value="@Model.FunctionTest" readonly="readonly"/>
                <label for="Bør_skiftes"></label>
                 <span validation-for="Bør_skiftes" class="FunctionTest"></span>
            </td>
            
            <td>
                <input type="radio" id="Defekt" name="FunctionTest" value="@Model.FunctionTest" readonly="readonly"/>
                <label for="Defekt"></label>   
                <span validation-for="Defekt" class="FunctionTest"></span>
            </td>
            
        </tr>
        <tr>
            <td>Trekkraft KN</td>
            <td>
                <input type="radio" id="OK" name="TractionForceKN" value="@Model.TractionForceKN" readonly="readonly"/>
                <label for="OK"></label>
                 <span validation-for="OK" class="TractionForceKN"></span>
            </td>
            
            <td>
                <input type="radio" id="Bør_skiftes" name="TractionForceKN" value="@Model.TractionForceKN" readonly="readonly"/>
