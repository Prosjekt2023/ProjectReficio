@model ReficioSolution.Models.CheckListViewModel

@{
    ViewData["Title"] = "Utfylt Sjekkliste";
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Utfylt Sjekkliste</title>
    <link rel="stylesheet" href="/css/Checklist.css">
</head>
<body>




<h2>Sjekkliste</h2>

            @Html.ValidationSummary()
          @Html.AntiForgeryToken()
 <table>
      <tr>
        <th>Kategorier</th>
        <th>Sjekkpunkter</th>
        <th>OK</th>
        <th>Bør Skiftes</th>
        <th>Defekt</th>
      </tr>
        <tr>
<td rowspan="8">Mekanisk</td>
        <td>Sjekk Clutchcheck lameller for slitasje</td>
        <td>
           <input type="radio" id="ClutchCheck_OK" name="ClutchCheck" value="OK" 
                     @(Model.ClutchCheck == "OK" ? "checked='checked'" : "")  />
              <label for="ClutchCheck_OK"></label>
          </td>
          <td>
              <input type="radio" id="ClutchCheck_Bør_skiftes" name="ClutchCheck" value="Bør_skiftes" 
                     @(Model.ClutchCheck == "Bør_skiftes" ? "checked='checked'" : "")  />
              <label for="ClutchCheck_Bør_skiftes"></label>
          </td>
          <td>
              <input type="radio" id="ClutchCheck_Defekt" name="ClutchCheck" value="Defekt" 
                     @(Model.ClutchCheck == "Defekt" ? "checked='checked'" : "")  />
              <label for="ClutchCheck_Defekt"></label>
              <input type="hidden" name="ClutchCheck" value="@Model.ClutchCheck" />
        </td>
    </tr>
    <tr>
        <td>Sjekk Bremser. Bånd/ Pal</td>
        <td>
           <input type="radio" id="BrakeCheck_OK" name="BrakeCheck" value="OK" 
                     @(Model.ClutchCheck == "OK" ? "checked='checked'" : "")  />
              <label for="ClutchCheck_OK"></label>
          </td>
          <td>
              <input type="radio" id="BrakeCheck_Bør_skiftes" name="BrakeCheck" value="Bør_skiftes" 
                     @(Model.BrakeCheck == "Bør_skiftes" ? "checked='checked'" : "")  />
              <label for="BrakeCheck_Bør_skiftes"></label>
          </td>
          <td>
              <input type="radio" id="BrakeCheck_Defekt" name="BrakeCheck" value="Defekt" 
                     @(Model.BrakeCheck == "Defekt" ? "checked='checked'" : "")  />
              <label for="BrakeCheck_Defekt"></label>
              <input type="hidden" name="BrakeCheck" value="@Model.BrakeCheck" />
        </td>
    </tr>
    <tr>
        <td>Sjekk lager for trommel</td>
        <td>
<input type="radio" id="DrumBearingCheck_OK" name="DrumBearingCheck" value="OK" 
                     @(Model.DrumBearingCheck == "OK" ? "checked='checked'" : "")  />
              <label for="DrumBearingCheck_OK"></label>
          </td>
          <td>
              <input type="radio" id="DrumBearingCheck_Bør_skiftes" name="DrumBearingCheck" value="Bør_skiftes" 
                     @(Model.DrumBearingCheck == "Bør_skiftes" ? "checked='checked'" : "")  />
              <label for="DrumBearingCheck_Bør_skiftes"></label>
          </td>
          <td>
              <input type="radio" id="DrumBearingCheck_Defekt" name="DrumBearingCheck" value="Defekt" 
                     @(Model.DrumBearingCheck == "Defekt" ? "checked='checked'" : "")  />
              <label for="DrumBearingCheck_Defekt"></label>
              <input type="hidden" name="DrumBearingCheck" value="@Model.DrumBearingCheck" />
        </td>
    </tr>
    <tr>
        <td>Sjekk PTO og opplagring</td>
       <td>
           <input type="radio" id="PTOCheck_OK" name="PTOCheck" value="OK" 
                  @(Model.PTOCheck == "OK" ? "checked='checked'" : "") readonly="readonly" />
           <label for="PTOCheck_OK"></label>
           <span validation-for="PTOCheck_OK" class="PTOCheck"></span>
       </td>
       <td>
           <input type="radio" id="PTOCheck_Bør_skiftes" name="PTOCheck" value="Bør_skiftes" 
                  @(Model.PTOCheck == "Bør_skiftes" ? "checked='checked'" : "") readonly="readonly" />
           <label for="PTOCheck_Bør_skiftes"></label>
           <span validation-for="PTOCheck_Bør_skiftes" class="PTOCheck"></span>
       </td>
       <td>
           <input type="radio" id="PTOCheck_Defekt" name="PTOCheck" value="Defekt"
                  @(Model.PTOCheck == "Defekt" ? "checked='checked'" : "") readonly="readonly" />
           <label for="PTOCheck_Defekt"></label>
           <span validation-for="PTOCheck_Defekt" class="PTOCheck"></span>
           <input type="hidden" name="PTOCheck" value="@Model.PTOCheck" />
       </td>
    </tr>
        <tr>
            <td>Sjekk kjedestrammer</td>
      <td>
          <input type="radio" id="ChainTensionCheck_OK" name="ChainTensionCheck" value="OK" 
                 @(Model.ChainTensionCheck == "OK" ? "checked='checked'" : "") />
          <label for="ChainTensionCheck_OK"></label>
      </td>
      <td>
          <input type="radio" id="ChainTensionCheck_Bør_skiftes" name="ChainTensionCheck" value="Bør_skiftes" 
