            <td>
                <input type="radio" id="Defekt" name="BrakeForceKN" value="@Model.BrakeForceKN" readonly="readonly"/>
                <label for="Defekt"></label>     
                <span validation-for="Defekt" class="BrakeForceKN"></span>
            </td>
            
        </tr>
