          <label for="ChainTensionCheck_Bør_skiftes"></label>
      </td>
      <td>
          <input type="radio" id="ChainTensionCheck_Defekt" name="ChainTensionCheck" value="Defekt"
                 @(Model.ChainTensionCheck == "Defekt" ? "checked='checked'" : "") />
          <label for="ChainTensionCheck_Defekt"></label>
          <input type="hidden" name="ChainTensionCheck" value="@Model.ChainTensionCheck" />
      </td>
        </tr>
 <tr>
     <td>Sjekk wire</td>
     <td>
         <input type="radio" id="WireCheck_OK" name="WireCheck" value="OK"
                @(Model.WireCheck == "OK" ? "checked='checked'" : "")/>
         <label for="WireCheck_OK"></label>
     </td>
     <td>
         <input type="radio" id="WireCheck_Bør_skiftes" name="WireCheck" value="Bør_skiftes"
                @(Model.WireCheck == "Bør_skiftes" ? "checked='checked'" : "")/>
         <label for="WireCheck_Bør_skiftes"></label>
     </td>
     <td>
         <input type="radio" id="WireCheck_Defekt" name="WireCheck" value="Defekt"
                @(Model.WireCheck == "Defekt" ? "checked='checked'" : "")/>
         <label for="WireCheck_Defekt"></label>
         <input type="hidden" name="WireCheck" value="@Model.WireCheck"/>
     </td>
 </tr>
        <tr>
            <td>Sjekk pinion lager</td>
    <td>
        <input type="radio" id="PinionBearingCheck_OK" name="PinionBearingCheck" value="OK" 
               @(Model.PinionBearingCheck == "OK" ? "checked='checked'" : "") />
        <label for="PinionBearingCheck_OK"></label>
    </td>
    <td>
        <input type="radio" id="PinionBearingCheck_Bør_skiftes" name="PinionBearingCheck" value="Bør_skiftes" 
               @(Model.PinionBearingCheck == "Bør_skiftes" ? "checked='checked'" : "") />
        <label for="PinionBearingCheck_Bør_skiftes"></label>
    </td>
    <td>
        <input type="radio" id="PinionBearingCheck_Defekt" name="PinionBearingCheck" value="Defekt"
               @(Model.PinionBearingCheck == "Defekt" ? "checked='checked'" : "") />
        <label for="PinionBearingCheck_Defekt"></label>
        <input type="hidden" name="PinionBearingCheck" value="@Model.PinionBearingCheck" />
    </td>
        </tr>
        <tr>
            <td>Sjekk kile på kjedehjul</td>
<td>
        <input type="radio" id="ChainWheelKeyCheck_OK" name="ChainWheelKeyCheck" value="OK" 
